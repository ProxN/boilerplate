{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "typeRoots": [
      "@types",
      "../../node_modules/@types"
    ],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    ".turbo",
    "coverage",
    "dist",
    "src/**/*.test.ts"
  ]
}