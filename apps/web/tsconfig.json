{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false,
    "rootDir": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
  },
  "include": ["next-env.d.ts", "*/.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next", ".turbo"]
}
